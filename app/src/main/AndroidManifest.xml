<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.kubatatami.poker">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_MULTICAST_STATE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".PokerApp_"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id"/>

        <activity
            android:name=".activities.SplashActivity_"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MenuActivity_"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.SwipeActivity_"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activities.JoinActivity_"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.JoinDetailsActivity_"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.HostActivity_"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.JoinBlackJackActivity_"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.JoinDetailsBlackJackActivity_"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.HostBlackJackActivity_"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.ChooseGameActivity_"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.GameActivity_"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.GameActivityBlackJack_"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.SettingsActivity_"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.ChooseAvatarActivity_"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.WelcomeActivity_"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.SelectDeckActivity_"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.HoldemSetupActivity_"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.StatisticsActivity_"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".activities.GameOverActivity_"
            android:screenOrientation="landscape"/>

        <activity
            android:name="com.facebook.LoginActivity"
            android:screenOrientation="landscape"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"/>

    </application>

</manifest>
